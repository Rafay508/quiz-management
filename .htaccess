RewriteEngine On

# 1. Redirect any externally requested /public URL to remove /public
RewriteCond %{THE_REQUEST} \s/public/ [NC]
RewriteRule ^public/(.*)$ /$1 [L,R=301]

# 2. For any request that doesn't include /public in the original request, internally rewrite to /public folder
RewriteCond %{REQUEST_URI} !^/public/
RewriteCond %{THE_REQUEST} !\s/public/ [NC]
RewriteRule ^(.*)$ /public/$1 [L]

